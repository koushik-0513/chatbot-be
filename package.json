{
  "name": "chatbot-be",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed:posts": "tsx --tsconfig tsconfig.json src/seeds/post-seed.ts",
    "seed:authors": "tsx --tsconfig tsconfig.json src/seeds/author-seed.ts",
    "seed:news": "tsx --tsconfig tsconfig.json src/seeds/news-seed.ts",
    "seed:collections": "tsx --tsconfig tsconfig.json src/seeds/collection-seed.ts",
    "seed:articles": "tsx --tsconfig tsconfig.json src/seeds/article-seed.ts",
    "seed:help": "tsx --tsconfig tsconfig.json src/seeds/help-seed.ts",
    "seed:help-expanded": "tsx --tsconfig tsconfig.json src/seeds/help-seed.ts",
    "seed:all": "tsx --tsconfig tsconfig.json src/seeds/master-seed.ts",
    "init:collection-counts": "tsx --tsconfig tsconfig.json src/scripts/initialize-collection-counts.ts",
    "migrate:snake-case": "tsx --tsconfig tsconfig.json migrations/run-all-migrations.ts",
    "validate:migrations": "tsx --tsconfig tsconfig.json migrations/validate-migrations.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/srinivas-prodgain/chatbot-be.git"
  },
  "keywords": [],
  "author": "Srinivas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/srinivas-prodgain/chatbot-be/issues"
  },
  "homepage": "https://github.com/srinivas-prodgain/chatbot-be#readme",
  "description": "Backend API for chatbot application",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.24",
    "ai": "^5.0.44",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mammoth": "^1.10.0",
    "markdown-it": "^14.1.0",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pdf-parse": "^1.1.1",
    "voyageai": "^0.0.8",
    "zod": "^3.25.76",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.3.0",
    "@types/pdf-parse": "^1.1.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}